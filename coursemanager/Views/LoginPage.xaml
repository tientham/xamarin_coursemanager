<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="coursemanager.Views.LoginPage">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <StackLayout
                Orientation="Vertical"
                Grid.Row="0"
                VerticalOptions="CenterAndExpand"
                HorizontalOptions="Fill"
                Spacing="15"
                Margin="20, 0">

                <Label
                    Text="Username"
                    TextColor="Black"
                    FontAttributes="Bold" />

                <Entry
                    TextColor="Black" />

                <Label
                    Text="Password"
                    TextColor="Black"
                    FontAttributes="Bold" />

                <Entry
                    TextColor="Black" />

            </StackLayout>

            <Button
                Grid.Row="1"
                Text="LOGIN"
                TextColor="White"
                BackgroundColor="Gray" />

        </Grid>
    </ContentPage.Content>
</ContentPage>

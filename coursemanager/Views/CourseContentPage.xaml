<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="coursemanager.Views.CourseContentPage"
             BackgroundColor="{x:StaticResource BackgroundColor}">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <ListView
                VerticalOptions="StartAndExpand"
                HorizontalOptions="FillAndExpand"
                BackgroundColor="Transparent"
                SeparatorVisibility="None"
                RowHeight="100">
                <ListView.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>Lecture 1</x:String>
                        <x:String>Lecture 2</x:String>
                        <x:String>Lecture 3</x:String>
                        <x:String>Lecture 4</x:String>
                    </x:Array>
                </ListView.ItemsSource>
            </ListView>

        </Grid>
    </ContentPage.Content>
</ContentPage>
